    "@types/node": "^18.11.18",
    "@types/urlsafe-base64": "^1.0.28",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "del-cli": "^6.0.0",
    "echo-cli": "^2.0.0",
    "esbuild": "^0.19.5",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "jsdoc": "^4.0.2",
    "minami": "^1.2.3",
    "prettier": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.25.3",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.24.1"
  },
